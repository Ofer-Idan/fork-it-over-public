# Todoist Integration
# Get your API token from: https://todoist.com/app/settings/integrations/developer
TODOIST_API_TOKEN=your_todoist_api_token
TODOIST_PROJECT_ID=optional_project_id

# Bring! Integration
BRING_EMAIL=your_bring_email
BRING_PASSWORD=your_bring_password
# BRING_LIST_UUID=optional_list_uuid  # Defaults to your primary list

# Access Control (required)
ACCESS_PASSWORD=your_secret_password

# Upstash Redis (for persistent archive storage on Vercel)
# Create a free database at: https://console.upstash.com/
UPSTASH_REDIS_REST_URL=your_upstash_redis_url
UPSTASH_REDIS_REST_TOKEN=your_upstash_redis_token
